<div class='container-fluid'>
  <div class='row'>
    <% @meals.each do |meal| %>
      <div class='card mx-auto hvr-grow-shadow'>
        <% if meal.pic.attached? %>
          <%= image_tag url_for(meal.pic), class: 'sized-image' %>
        <% end %>
        <div class='card-body d-flex flex-column'>
          <h5 class='card-title mt-auto'><%= meal.name %></h5>
          <p class='card-text mt-auto'>Calories per serving: XX</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
