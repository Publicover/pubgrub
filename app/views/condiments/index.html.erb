<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>C/G</th>
      <th>Links</th>
    </tr>
  </thead>
  <tbody>
    <% @condiments.each do |condiment| %>
      <tr>
        <td><%= condiment.name %></td>
        <td><%= condiment.calories_per_gram %></td>
        <td><%= link_to 'Show', condiment_path(condiment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
