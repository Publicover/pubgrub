<div>
  <h3><%= @entree.name %></h3>
  <p>Cuisine: <%= @entree.cuisine.name %></p>
  <p>Calories per Gram: <%= @entree.calories_per_gram %></p>
  <p>
    <% if @entree.pic.attached? %>
      <%= image_tag url_for(@entree.pic), class: 'sized-image' %>
    <% else %>
      Add a picture!
    <% end %>
  </p>
  <p>
    Ingredients:
  </p>
  <hr />
  <% @entree.ingredients.each do |ingredient| %>
    <p>
      <%= ingredient.name %><br />
      <%= ingredient.measurement unless ingredient.measurement.nil? %><br />
      <%= ingredient.quantity unless ingredient.quantity.nil? %><br />
    </p>

  <% end %>
  <hr />
</div>
