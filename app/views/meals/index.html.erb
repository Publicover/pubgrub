<h1>Meals#index</h1>
<p>Find me in app/views/meals/index.html.erb</p>

<p><%= link_to 'Back to dashboard', root_path %></p>
<p><%= link_to 'Create a meal', new_meal_path %></p>

<% @meals.each do |meal| %>
  <hr />
  <p><%= link_to "#{meal.name}", meal_path(meal) %></p>
  <p><%= meal.cuisine %></p>
  <p><% if meal.pic.attached? %>
    <%= image_tag url_for(meal.pic), class: 'sized-image' %>
  <% end %></p>
  <p><%= link_to 'Delete this meal', meal_path(meal), method: :delete %></p>
  <hr />
<% end %>
