<div>
  <h3><%= @meal.name %></h3>
  <p><%= @meal.cuisine %></p>
  <p>
    <% if @meal.pic.attached? %>
      <%= image_tag url_for(@meal.pic), class: 'sized-image' %>
    <% else %>
      Add a picture!
    <% end %>
  </p>
  <p>
    Ingredients:
  </p>
  <hr />
  <% @meal.ingredients.each do |ingredient| %>
    <p>
      <%= ingredient.name %><br />
      <%= ingredient.measurement unless ingredient.measurement.nil? %><br />
      <%= ingredient.quantity unless ingredient.quantity.nil? %><br />
    </p>

  <% end %>
  <hr />
</div>
